<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/template-install.dtd">
<extension version="2.5" type="template" method="upgrade" client="site">
	<name>js_tripod</name>
	<creationDate>March 2014</creationDate>
	<author>Joomlashack</author>
	<authorEmail>support@joomlashack.com</authorEmail>
	<authorUrl>http://www.joomlashack.com</authorUrl>
	<copyright>Copyright Joomlashack 2014. All rights reserved</copyright>
	<license>GNU GPLv2</license>
	<version>1.0.0_RC5</version>
    <description>TPL_JS_TRIPOD_XML_DESCRIPTION</description>

	<languages folder="language">
		<!-- en-GB -->
		<language tag="en-GB">en-GB/en-GB.tpl_js_tripod.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_js_tripod.sys.ini</language>
		<!-- es-ES -->
		<language tag="es-ES">es-ES/es-ES.tpl_js_tripod.ini</language>
		<language tag="es-ES">es-ES/es-ES.tpl_js_tripod.sys.ini</language>
	</languages>

	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>functions.php</filename>
		<filename>index.php</filename>
		<filename>template.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<filename>wrighttemplate.php</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>wright</folder>
	</files>

	<positions>
		<position>toolbar</position>
		<position>logo</position>
		<position>top</position>
		<position>top2</position>
		<position>menu</position>
		<position>featured</position>
		<position>grid-top</position>
		<position>grid-top2</position>
		<position>above-content</position>
		<position>breadcrumbs</position>
		<position>sidebar1</position>
		<position>sidebar2</position>
		<position>below-content</position>
		<position>grid-bottom</position>
		<position>grid-bottom2</position>
		<position>bottom-menu</position>
		<position>footer</position>
	</positions>

	<config>
		<fields name="params" addfieldpath="/templates/js_tripod/wright/parameters/joomla_2.5">
			<fieldset name="basic">
                <!-- Start of default Wright params -->
				<field name="helper" type="help" label="TPL_JS_WRIGHT_FIELD_NEED_HELP_LABEL" description="TPL_JS_WRIGHT_FIELD_NEED_HELP_DESC"/>
				<field name="rebrand" type="rebrand" default="no" label="TPL_JS_WRIGHT_FIELD_REMOVE_BRANDING_LABEL" description="TPL_JS_WRIGHT_FIELD_REMOVE_BRANDING_DESC" />
				<field name="style" type="styles" default="yellow-black" label="TPL_JS_WRIGHT_FIELD_STYLE_LABEL" description="TPL_JS_WRIGHT_FIELD_STYLE_DESC" />
				<field name="modal" type="list" default="1" label="TPL_JS_WRIGHT_FIELD_ENABLE_MODAL_LABEL" description="TPL_JS_WRIGHT_FIELD_ENABLE_MODAL_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="jquery" type="list" default="1" label="TPL_JS_WRIGHT_FIELD_LOAD_JQUERY_LABEL" description="TPL_JS_WRIGHT_FIELD_LOAD_JQUERY_DESC">
					<option value="0">JNO</option>
					<option value="1">TPL_JS_WRIGHT_FIELD_LOAD_JQUERY_YES_LOCALLY</option>
					<option value="2">TPL_JS_WRIGHT_FIELD_LOAD_JQUERY_YES_GOOGLE</option>
				</field>
				<field name="javascriptBottom" type="list" default="1" label="TPL_JS_WRIGHT_FIELD_JAVASCRIPT_BOTTOM" description="TPL_JS_WRIGHT_FIELD_JAVASCRIPT_BOTTOM_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="logo" type="logo" default="template" label="TPL_JS_WRIGHT_FIELD_LOGO_IMAGE_LABEL" description="TPL_JS_WRIGHT_FIELD_LOGO_IMAGE_DESC" />
				<field name="body_font" type="typography" default="default" label="TPL_JS_WRIGHT_FIELD_BODY_FONT_LABEL" description="TPL_JS_WRIGHT_FIELD_BODY_FONT_DESC" />
				<field name="header_font" type="typography" default="default" label="TPL_JS_WRIGHT_FIELD_HEADING_FONT_LABEL" description="TPL_JS_WRIGHT_FIELD_HEADING_FONT_DESC" />
				<field name="columns" type="columns" default="sidebar1:3;main:6;sidebar2:3" sidebars="2" label="TPL_JS_WRIGHT_FIELD_COLUMNS_LABEL" description="TPL_JS_WRIGHT_FIELD_COLUMNS_DESC" />
				<field name="buttonspacer" label="TPL_JS_WRIGHT_BOOTSTRAP_TITLE_LABEL" description="TPL_JS_WRIGHT_BOOTSTRAP_TITLE_DESC" type="spacer" />
				<field name="bs_rowmode" type="list" default="row" label="TPL_JS_WRIGHT_FIELD_BOOTSTRAP_ROW_MODE_LABEL" description="TPL_JS_WRIGHT_FIELD_BOOTSTRAP_ROW_MODE_DESC">
					<option value="row-fluid">TPL_JS_WRIGHT_FIELD_BOOTSTRAP_ROW_MODE_FLUID</option>
					<option value="row">TPL_JS_WRIGHT_FIELD_BOOTSTRAP_ROW_MODE_DEFAULT</option>
				</field>
				<field name="responsive" type="list" default="1" label="TPL_JS_WRIGHT_FIELD_ENABLE_RESPONSIVE" description="TPL_JS_WRIGHT_FIELD_ENABLE_RESPONSIVE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="stickyFooter" type="list" default="1" label="TPL_JS_WRIGHT_FIELD_STICKY_FOOTER" description="TPL_JS_WRIGHT_FIELD_STICKY_FOOTER_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="wright_bootstrap_images" type="list" default="" label="TPL_JS_WRIGHT_BOOTSTRAP_IMAGES" description="TPL_JS_WRIGHT_BOOTSTRAP_IMAGES_DESC">
					<option value="">TPL_JS_WRIGHT_NONE</option>
					<option value="img-rounded">TPL_JS_WRIGHT_BOOTSTRAP_IMAGES_ROUNDED</option>
					<option value="img-circle">TPL_JS_WRIGHT_BOOTSTRAP_IMAGES_CIRCLE</option>
					<option value="img-polaroid">TPL_JS_WRIGHT_BOOTSTRAP_IMAGES_POLAROID</option>
				</field>
                <!-- End of default Wright params -->
			</fieldset>
			<fieldset name="TPL_JS_TRIPOD_OPTIONS">

	            <field name="enableSlideshow" type="list" default="0" label="TPL_JS_TRIPOD_ENABLE_SLIDESHOW" description="TPL_JS_TRIPOD_ENABLE_SLIDESHOW_DESC">
	                    <option value="1">JYES</option>
	                    <option value="0">JNO</option>
	            </field>
	            <field name="slideshowImageOne" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_ONE" description="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_ONE_DESC" />
	            <field name="slideshowImageTwo" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_TWO" description="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_TWO_DESC" />
	            <field name="slideshowImageThree" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_THREE" description="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_THREE_DESC" />
	            <field name="slideshowImageFour" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_FOUR" description="TPL_JS_TRIPOD_SLIDESHOW_IMAGE_FOUR_DESC" />
	            <field name="iconOne" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_ICON_ONE" description="TPL_JS_TRIPOD_SLIDESHOW_ICONS_DESC" />
	            <field name="iconTwo" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_ICON_TWO" description="TPL_JS_TRIPOD_SLIDESHOW_ICONS_DESC" />
	            <field name="iconThree" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_ICON_THREE" description="TPL_JS_TRIPOD_SLIDESHOW_ICONS_DESC" />
				<field name="iconFour" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_SLIDESHOW_ICON_FOUR" description="TPL_JS_TRIPOD_SLIDESHOW_ICONS_DESC" />
	            <field name="backgroundImage" type="imagelist" default="" directory="images" label="TPL_JS_TRIPOD_BACKGROUND_IMAGE" description="TPL_JS_TRIPOD_BACKGROUND_IMAGE_DESC" />
				<field name="tripod_toolbar_displayed" type="radio" default="1" label="TPL_JS_TRIPOD_TOOLBAR_DISPLAYED" description="TPL_JS_TRIPOD_TOOLBAR_DISPLAYED_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
		    </fieldset>

		    <fieldset name="TPL_JS_TRIPOD_SINGLESCROLLING_OPTIONS">
			    <field name="singleScrollingPage" type="list" default="0" label="TPL_JS_TRIPOD_SINGLE_SCROLLING_PAGE" description="TPL_JS_TRIPOD_SINGLE_SCROLLING_PAGE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			    <field name="navmenu_top" type="text" default="Top" label="TPL_JS_TRIPOD_NAVMENU_TOP" description="TPL_JS_TRIPOD_NAVMENU_TOP_DESC" />
			    <field name="navmenu_featured" type="text" default="Featured" label="TPL_JS_TRIPOD_NAVMENU_FEATURED" description="TPL_JS_TRIPOD_NAVMENU_FEATURED_DESC" />
			    <field name="navmenu_category_description" type="text" default="Category description" label="TPL_JS_TRIPOD_NAVMENU_CATDESC" description="TPL_JS_TRIPOD_NAVMENU_CATDESC_DESC" />
			    <field name="navmenu_more_articles" type="text" default="More articles" label="TPL_JS_TRIPOD_NAVMENU_MOREARTICLES" description="TPL_JS_TRIPOD_NAVMENU_MOREARTICLES_DESC" />
			    <field name="navmenu_subcategories" type="text" default="Subcategories" label="TPL_JS_TRIPOD_NAVMENU_SUBCATS" description="TPL_JS_TRIPOD_NAVMENU_SUBCATS_DESC" />
			    <field name="navmenu_bottom" type="text" default="Bottom" label="TPL_JS_TRIPOD_NAVMENU_BOTTOM" description="TPL_JS_TRIPOD_NAVMENU_BOTTOM_DESC" />
			    <field name="navmenu_last" type="text" default="Last" label="TPL_JS_TRIPOD_NAVMENU_LAST" description="TPL_JS_TRIPOD_NAVMENU_LAST_DESC" />
			    <field name="navmenu_scroll_speed" type="text" default="2000" label="TPL_JS_TRIPOD_NAVMENU_SPEED" description="TPL_JS_TRIPOD_NAVMENU_SPEED_DESC" />
		    </fieldset>
		</fields>
	</config>
</extension>
